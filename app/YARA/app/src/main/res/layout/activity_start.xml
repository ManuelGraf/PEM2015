<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context="pem.yara.StartActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1.3"
        android:id="@+id/YARALogo"
        android:background="@drawable/yara_home">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/infoOverlayText"
            android:text="@string/info_loading_songs"
            android:id="@+id/infoBox"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           />
    </RelativeLayout>

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabsHome"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.3"
        />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_below="@+id/tabsHome"
        android:layout_width="fill_parent"
        android:layout_weight="1.5"
        android:layout_height="0px">

