<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="pem.yara.fragments.HomeScreenFragment">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/page1"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >


        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:id="@+id/btnShowStatistics"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Songlist"
            android:id="@+id/btnShowSongList"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Run"
            android:id="@+id/btnStartRunning"
            android:onClick="newTrack"
            android:focusable="false"
            android:clickable="false"

            />

    </LinearLayout>


</FrameLayout>
