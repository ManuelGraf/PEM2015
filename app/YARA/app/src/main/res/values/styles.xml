<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="textAppearanceMegaLargeMono" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18pt</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="textAppearanceMediumMono" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="infoOverlayText" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


</resources>
