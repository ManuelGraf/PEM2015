<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/YaraActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YaraActionBar</item>
    </style>

    <style name="YaraActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionBarBg</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionBarBg</item>
    </style>

    <style name="textAppearanceMegaLargeMono" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">18pt</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="textAppearanceMediumMono" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="textAppearanceMediumBlack" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#777777</item>

    </style>  <style name="textAppearanceSmallBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#777777</item>
    </style>

    <style name="infoOverlayText" parent="@android:style/TextAppearance.Small">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>


</resources>
